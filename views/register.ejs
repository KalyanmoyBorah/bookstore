<%- include("partials/header.ejs") %>


<form class="animated fadeIn" action="/register" method="post">
  <div style="margin-top:30px" class="form-group">
    <label style="margin-left:420px" for="exampleInputEmail1">Customer full name</label>
    <input name="username" style="width:50%; margin-left:300px" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your name">
  </div>
  <div class="form-group">
    <label style="margin-left:420px" for="exampleInputPassword1">Mobile Number</label>
    <input name="mobile" style="width:50%; margin-left:300px" type="text" class="form-control" id="exampleInputPassword1" placeholder="Contact number">
  </div>
  <div class="form-group">
    <label style="margin-left:420px" for="exampleInputEmail1">Email address</label>
    <input name="email" style="width:50%; margin-left:300px" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    <small style="margin-left:420px" id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label style="margin-left:420px" for="exampleInputPassword1">Password</label>
    <input name="password" style="width:50%; margin-left:300px" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
  </div>
  <div class="form-group">
    <label style="margin-left:420px" for="exampleInputAddress">Delivery Address</label>
    <textarea style="width:50%; margin-left:300px" class="form-control" name="address" rows="4" cols="80" placeholder="Enter address"></textarea>
  </div>
  <button style="margin-left:420px; font-weight:bold" type="submit" class="btn btn-outline-dark">Submit</button>
</form>




<%- include("partials/footer.ejs") %>
